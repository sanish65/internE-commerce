extends ../layout-admin

block content
  div(class="container")
        div(class="page-title")
            h3.page-header Brand
        div(class="row")
            div(class="col-lg-12")
                div(class="card")
                    div(class="card-header h5") Add Brand 
                    div(class="card-body")
                      form(method = 'POST', enctype='multipart/form-data')
                        .form-group.row
                          .col-md-2
                            label(class='col-form-label font-weight-bold', for='name') Brand Type
                          .col-md-4
                            <select class="form-control status" data-style="btn-info" name="btype">
                              <optgroup label="Brand Type">
                                <option name="inventory" value="inventory" >Inventory</option>
                                <option name="preorder" value="preorder" >Preorder</option>
                              </optgroup>
                            </select>
                        .form-group.row
                          .col-md-2
                            label(class='col-form-label font-weight-bold', for='name') Brand Name
                          .col-md-4
                            input.form-control(type='text', name='name', id='name', autocomplete='name', autofocus=true, placeholder="Name of the brand")
                        .form-group.row
                          .col-md-2
                            label(class='col-form-label font-weight-bold', for='slug') Slug
                          .col-md-4
                            input.form-control(type='text', name='slug', id='slug', autocomplete='slug', autofocus=true, placeholder="Slug for url")
                        .form-group.row
                          .col-md-2
                            label(class='col-form-label font-weight-bold', for='shortdesc') Short Description
                          .col-md-8
                            textarea.form-control(name='shortdesc', id='shortdesc', autocomplete='shortdesc', autofocus=true, placeholder="Short description")
                        .form-group.row
                          .col-md-2
                            label(class='col-form-label font-weight-bold', for='description') Description
                          .col-md-8
                            textarea.form-control(name='description', id='description', autocomplete='description', autofocus=true, placeholder="Description")
                        .form-group.row
                          .col-md-2
                            label(class='col-form-label font-weight-bold', for='country') Country
                          .col-md-4
                            input.form-control(type='text', name='country', id='country', autocomplete='country', autofocus=true, placeholder="Country of Brand")
                        .form-group.row
                          .col-md-2
                            label(class='col-form-label font-weight-bold', for='name') Brand Website
                          .col-md-4
                            input.form-control(type='text', name='website', id='website', autocomplete='website', autofocus=true, placeholder="Brands official web links..")
                        .form-group.row
                          .col-md-2
                            label(class='col-form-label font-weight-bold', for='pimage') Banner
                          .col-md-4
                            input#input-multi-files.form-control-file.border(type='file', name='multi-files' , required)

                            input.form-control(type="text",name="caption", placeholder="caption e.g xinney brand")

                        .form-group.row
                          .col-sm-12
                            label(class='col-form-label font-weight-bold', id="displayImage" ,for='pimage') 
                              .preview-images

                        .form-group.row
                          .col-md-2
                            label(class='col-form-label font-weight-bold', for='pimage') Thumbnail
                          .col-md-4
                            input#input-multi-filessecond.form-control-file.border(type='file', name='multi-files',  required)

                            input.form-control(type="text",name="caption1", placeholder="caption e.g xinney brand")

                        .form-group.row
                          .col-sm-12
                            label(class='col-form-label font-weight-bold', id="displayImage" ,for='pimage') 
                              .preview-filessecond
                        hr
                        .form-group
                          .col-md-10.offset-md-2
                            button.btn.btn-primary(type='submit')
                              | Add Brand
