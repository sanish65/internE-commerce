                        .form-group.row
                          .col-md-2
                            label(class='col-form-label font-weight-bold', for='pimage') Banner
                          .col-md-4
                            input#input-multi-files.form-control-file.border(type='file', name='multi-files' )
                            input.form-control(type="text",name="caption", placeholder="caption e.g xinney display_categories" value=display_categories.caption)
                        .form-group.row
                          .col-sm-12
                            label(class='col-form-label font-weight-bold', id="displayImage" ,for='pimage') 
                              .preview-images


                        .form-group.row
                          each pic, index in display_categories.banner 
                            .column(style="text-align:center")
                              img.hover-shadow.cursor(src=pic['path'], alt= display_categories.caption style="width:100%" onclick="openModal();currentSlide("+(index+1)+")")

                        #myModal.modal
                          span.close.cursor(onclick="closeModal()") ×
                          .modal-content
                            each pic, index in display_categories.banner
                              .mySlides
                                .numbertext #{index+1}/#{display_categories.banner.length} #{display_categories.caption}
                                img(src=pic['path'] style="width:100%")

                            a.prev(onclick="plusSlides(-1)") ❮
                            a.next(onclick="plusSlides(1)") ❯
                            .caption-container
                              p#caption
                            each pic , index in display_categories.banner
                              .column
