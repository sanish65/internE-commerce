extends ../layout-admin

block content
  link(rel='stylesheet', href='/css/images.css')
  div(class="container")
        div(class="page-title")
            h3.page-header Category
        div(class="row")
            div(class="col-lg-12")
                div(class="card")
                    div(class="card-header h5") Edit #{display_categories.name} 
                    div(class="card-body")


                      form(method = 'POST', enctype='multipart/form-data')  
                        .form-group.row
                          .col-md-2
                            label(class='col-form-label font-weight-bold', for='name') Name
                          .col-md-4
                            input.form-control(type='text', name='name', id='name', autocomplete='name', autofocus=true, value=display_categories.name)
                        .form-group.row
                          .col-md-2
                            label(class='col-form-label font-weight-bold', for='slug') slug
                          .col-md-4
                            input.form-control(type='text', name='slug', id='slug', autocomplete='slug', autofocus=true, value=display_categories.slug)
                        .form-group.row
                          .col-md-2
                            label(class='col-form-label font-weight-bold', for='shortdesc') Short Description
                          .col-md-8
                            textarea.form-control(name='shortdesc', id='shortdesc', autocomplete='shortdesc', autofocus=true) #{display_categories.shortdesc}
                        .form-group.row
                          .col-md-2
                            label(class='col-form-label font-weight-bold', for='description') Description
                          .col-md-8
                            textarea.form-control(name='description', id='description', autocomplete='description', autofocus=true) #{display_categories.description}
                        .form-group.row
                          .col-md-2
                            label(class='col-form-label font-weight-bold', for='description') Category
                          - catgs = display_categories.default
                          - id_names = display_categories.idnames
                          - checker = display_categories.checker
