extends ../layout-admin


block content
  div(class="content")
    div(class="container")
      div(class="page-title")
        h3 Brand
      div(class="row")
        div(class="col-md-12 col-lg-12")
          div(class="card")
            div(class="card-header h5") Brand List
            div(class="card-body")
              div(class="row")
                div(class="col-sm-12 col-md-6")

              div(class="table-responsive")
                table(class="table table-striped" id="myTable")
                  thead(class="thead-dark")
                    tr
                      th(scope='col') SNo
                      th(scope='col') Name
                      th(scope='slug') Slug
                      th(scope='type') Type
                      th(scope='col') Country
                      th Action

                  tbody
                    for item in brands
                      tr
                        td #{item.count}
                        td #{item.name}
                        td #{item.slug}
                        td #{item.type}
                        td #{item.country}
                        td
                          a.btn.btn-outline-primary(href="/brandandcategory/brandlist/"+item.id) Edit