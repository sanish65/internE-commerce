extends ../layout-admin

block content
    div(class="container")
        div(class="page-title")
            h3.page-header Product
        div(class="row")
            div(class="col-lg-12")
                div(class="card")
                    div(class="card-header h5") Add Product 
                    div(class="card-body")

                        form(method = 'POST'  enctype='multipart/form-data')
                          input(type='hidden', name='_csrf', value=_csrf)

                          .form-group.row
                            .col-md-2
                              label(class='col-form-label font-weight-bold', for='sku') SKU
                            .col-md-4
                              input.form-control(type='text', class='skusearch', name='sku', id='sku', autocomplete='sku', autofocus=true, placeholder="SKU" required)
                          .form-group.row
                            .col-md-2
                              label(class='col-form-label font-weight-bold', for='name') Name
                            .col-md-4
                              input.form-control(type='text', name='name', id='name', autocomplete='name', autofocus=true, placeholder="Name" required value= prodAttr.name)
                          .form-group.row
                            .col-md-2
                              label(class='col-form-label font-weight-bold', for='description') Description
                            .col-md-8
                              textarea.form-control(name='description', id='description', autocomplete='description', autofocus=true, placeholder="Description" required)
                          .form-group.row
                            .col-md-2
                              label(class='col-form-label font-weight-bold', for='producttype') Product Type
                            .col-md-4
                              <select class="form-control status" data-style="btn-info" name="producttype">
                                <optgroup label="Select product type">

                                  each producttype in prodAttr.DropDownProductType
                                    each val,key in producttype
                                      <option name=#{key} value=#{key} id="wtype">#{val}</option>
                                  </optgroup>
                                </select>

                          .form-group.row
                            .col-md-2
                              label(class='col-form-label font-weight-bold', for='type')  Type
                            .col-md-4
                              <select class="form-control status" data-style="btn-info" name="featuretype">
                                <optgroup label="Select fetauring type">

                                  each featuretype in prodAttr.DropDownFeatureType
                                    each val,key in featuretype
                                      <option name=#{key} value=#{key} id="wtype">#{val}</option>
                                  </optgroup>
                                </select>

                          .form-group.row
                            .col-md-2
                              label(class='col-form-label font-weight-bold', for='brand') Brand
                            .col-md-4
                              <select class="form-control status" data-style="btn-info" name="brand">
                                <optgroup label="Select Brand">
                                  each brand in prodAttr.brands
                                    <option name=#{brand} value=#{brand}>#{brand}</option>
                                </optgroup>
                              </select>
                          .form-group.row


                            .col-md-2
                              label(class='col-form-label font-weight-bold', for="categories") Categories
                            - catgs = prodAttr.categories
                            - id_names = prodAttr.idnames
                            include ../partials/categoryprint      

                          .form-group.row
                            .col-md-2
                              label(class='col-form-label font-weight-bold', for='price') V-link
                            .col-md-4
                              input.form-control(type='text', name='link', id='link', autocomplete='link', autofocus=true, placeholder="link" required value= prodAttr.link)

                          .form-group.row
                            .col-md-2
                              label(class='col-form-label font-weight-bold', for='count') Count (Default 0)
                            .col-md-4
                              input.form-control(type='text', name='count', id='count', autocomplete='count', placeholder="text of products" value=prodAttr.count required)

                          .form-group.row
                            .col-md-2
                              label(class='col-form-label font-weight-bold', for='pimage') Image
                            .col-md-4
                              input#input-multi-files.form-control-file.border(type='file', name='multi-files', multiple='' , required)

                              input.form-control(type="text",name="caption", placeholder="caption e.g xinney product")

                          .form-group.row
                            .col-sm-12
                              label(class='col-form-label font-weight-bold', id="displayImage" ,for='pimage') 
                                .preview-images


                          .form-group.row
                            .col-md-4
                              label(class='col-form-label font-weight-bold', for='wtype') Weight
                              <select class="form-control status" data-style="btn-info" name="wtype">
                                <optgroup label="Select weight type">

                                  each wtypes in prodAttr.DropDownWeight
                                    each val,key in wtypes
                                      <option name=#{key} value=#{key} id="wtype">#{val}</option>
                                  </optgroup>
                                </select>


                            if prodAttr.wmain == 0
                              .col-md-4
                              label(class='col-form-label font-weight-bold', for='weightmain') Main Weight
                              input.form-control(type='text', name='weight', id='weight', autocomplete='weight', autofocus=true, placeholder="LB/KG/Litre" value=prodAttr.wmain || 0 , checked)

                            .col-md-4
                              label(class='col-form-label font-weight-bold', for='weightmain') Main Weight
                              input.form-control(type='text', name='weight', id='weight', autocomplete='weight', autofocus=true, placeholder="LB/KG/Litre" value=prodAttr.wmain || 0)
                            .col-md-4
                              label(class='col-form-label font-weight-bold', for='weightsub') Sub Weight
                              input.form-control(type='text', name='weight', id='weight', autocomplete='weight', autofocus=true, placeholder="oz/gm/ml" value=prodAttr.wsub || 0)

                          .form-group.row
                            .col-md-2
                              label(class='col-form-label font-weight-bold', for='price') Price
                            .col-md-4
                              input.form-control(type='text', name='price', id='price', autocomplete='price', autofocus=true, placeholder="price" required value= prodAttr.price)

                          .form-group
                            .col-md-10.offset-md-2
                              button.btn.btn-primary(type='submit')
                                | Add Product

