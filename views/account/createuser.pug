extends ../layout-admin

block content
    div(class="container")
        div(class="page-title")
            h3.page-header User
        div(class="row")
            div(class="col-lg-12")
                div(class="card")
                    div(class="card-header h5") Create New User
                    div(class="card-body")
                        form(method = "POST", action="/createuser")
                            input(type='hidden', name='_csrf', value=_csrf)
                            div(class="form-group row")
                                label(for="fname" class="col-sm-2 font-weight-bold") First Name
                                div(class="col-sm-6")
                                    input(type="text", class="form-control" name="fname", id="fname", autofocus, autocomplete="fname", required)
                            div(class="form-group row")
                                label(for="lname" class="col-sm-2 font-weight-bold") Last Name
                                div(class="col-sm-6")
                                    input(type="text", class="form-control" name="lname", id="lname", autofocus, autocomplete="lname", required)

                            div(class="form-group row")
                                label(for="email" class="col-sm-2 font-weight-bold") Email
                                div(class="col-sm-6")
                                    input(type="email", class="form-control" name="email", id="email", autofocus, autocomplete="email", required)

                            div(class="form-group row")
                                label(for="usertype" class="col-sm-2 font-weight-bold") User Type
                                div(class="col-sm-4")
                                    <select class="form-control" data-style="btn-info" name="usertype">
                                        <optgroup label="Select Usertype">
                                            each select_usertype in usertype
                                                each val,key in select_usertype
                                                    <option name=#{key} value=#{key} id="usertype">#{val}</option>
                                        </optgroup>
                                    </select>

                            div(class="form-group row")
                                label(for="password" class="col-sm-2 font-weight-bold") Password
                                div(class="col-sm-6")
                                    input(type="password", class="form-control" name="password", id="password", autofocus, autocomplete="password", required)
                            div(class="form-group row")
                                label(for="confirmPassword" class="col-sm-2 font-weight-bold") Confirm Password
                                div(class="col-sm-6")
                                    input(type="password", class="form-control" name="confirmPassword", id="confirmPassword", autofocus, autocomplete="confirmPassword", required)



                            div(class="line")
                            br
                            div(class="form-group row")
                                div(class="col-sm-4 offset-sm-2")
                                    button(type="reset" class="btn btn-secondary mb-2")
                                        i(class="fa fa-times")
                                        span(class="ml-2") Cancel

                                    button(type="submit" class="btn btn-primary mb-2 ml-2")
                                        i(class="fa fa-save")
                                        span(class="ml-2") Add User