extends ../layout-admin

block content
  div(class="container")
    div(class="page-title")
      h3.page-header Purchase
    div(class="row")
      div(class="col-lg-12")
        div(class="card")
          div(class="card-header h5") Add Purchase
          div(class="card-body")
            form(method='POST')
              form(method='POST')
                input(type='hidden' name='_csrf', value=_csrf)
                include purchaselayout

                if purHref.formcount
                - var counter = 0

                while  counter < purHref.formcount
                  - counter++

                  if counter % 2 == 0
                    div(class="dark-product" id="div"+counter)
                      include purchaseproduct
                  else
                    div(class="light-product" id="div"+counter)
                      include purchaseproduct
                hr
                .form-group.row
                  .col-md-10.offset-md-2
                    button.btn.btn-primary(type='submit')
                      | Add Purchase