extends ../layout-admin

block content
  div(class="container")
        div(class="page-title")
            h3 Purchase
        div(class="row")
            div(class="col-lg-12")
                div(class="card")
                    div(class="card-header h5") Edit Purchase 
                    div(class="card-body")
                      form(method='POST')
                        input(type='hidden', name='_csrf', value=_csrf)
                        include purchaselayout

                        if purHref.formcount
                        - var counter = 0

                        each prodHref, index  in purHref.product
                          if index % 2 == 0
                            div(class="dark-product")
                              include editpurchaseproduct
                          else
                            div(class="light-product")
                              include editpurchaseproduct

                        br 
                        br 
                        h3 Add more forms:
                        h7 (empty forms will not be saved)

                        while  counter < purHref.formcount
                          - counter++
                          if counter > purHref.formcount - 1
                            if counter % 2 == 0
                              div(class="dark-product" id="div"+counter)
                                include purchaseproduct
                            else 
                              div(class="light-product" id="div"+counter) 
                                include purchaseproduct




                        .form-group.row
                          .offset-md-12.col-md-12.p-1
                            button.btn.btn-primary(type='submit')
                              | Edit Purchase 

