extends layout-admin

block content
    div(class="container")
        div(class="page-title")
            h3 Order
        div(class="row")
            div(class="col-lg-12")
                div(class="card")
                    div(class="card-header h5") Order Form
                    div(class="card-body")
                      h1(style='margin-top:15px;') Please check if your preferred product is on list
                      br
                      form(action='/order/matchproduct/'+href._id, method='POST', onsubmit="return confirm('Please check if you have selected the right product and right quantity, once you select, you cannot undo the process');")
                        input(type='hidden', name='_csrf', value=_csrf)
                        input(type='hidden',name='email', value = href.email)
                        for item in items
                          input(type='radio', id='productname', name='productname', value=item.productname)
                          label(for='productname') #{item.productname}
                          br
                        
                        .pb-2.mt-2.mb-4.border-bottom
                        h6 Quantity :  
                          input(class="quantity",min="1",max=href.productCount ,name='quantity' ,id='quantity', value=href.productCount  type="number" style='width:10%')
                        button(class="btn btn-outline-success" type='submit') Match


    